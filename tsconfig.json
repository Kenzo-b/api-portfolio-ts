{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["reflect-metadata"],
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
